<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <!-- PHONES -->
    <mapping map-null="false">
        <class-a>com.itechart.deliveryservice.entity.Phone</class-a>
        <class-b>com.itechart.deliveryservice.controller.data.PhoneDTO</class-b>
        <field>
                <a>owner.id</a>
                <b>ownerId</b>
        </field>
    </mapping>

    <!-- LOGIN -->
    <mapping map-null="false">
        <class-a>com.itechart.deliveryservice.entity.User</class-a>
        <class-b>com.itechart.deliveryservice.controller.data.LoginInfoDTO</class-b>
        <field>
            <a>username</a>
            <b>name</b>
        </field>
    </mapping>

    <!-- CONTACT -->
    <mapping map-null="false">
        <class-a>com.itechart.deliveryservice.entity.Contact</class-a>
        <class-b>com.itechart.deliveryservice.controller.data.ContactDTO</class-b>
        <field>
            <a>address.city</a>
            <b>city</b>
        </field>
        <field>
            <a>address.street</a>
            <b>street</b>
        </field>
        <field>
            <a>address.flat</a>
            <b>flat</b>
        </field>
        <field>
            <a>address.home</a>
            <b>home</b>
        </field>
    </mapping>

    <mapping map-null="false">
        <class-a>com.itechart.deliveryservice.entity.Contact</class-a>
        <class-b>com.itechart.deliveryservice.controller.data.ShortContactDTO</class-b>
        <field>
            <a>address.city</a>
            <b>city</b>
        </field>
        <field>
            <a>address.street</a>
            <b>street</b>
        </field>
        <field>
            <a>address.flat</a>
            <b>flat</b>
        </field>
        <field>
            <a>address.home</a>
            <b>home</b>
        </field>
    </mapping>

    <!-- ORDER -->
    <mapping map-null="false">
        <class-a>com.itechart.deliveryservice.entity.Order</class-a>
        <class-b>com.itechart.deliveryservice.controller.data.OrderDTO</class-b>
        <field>
            <a>customer.name</a>
            <b>customerName</b>
        </field>
        <field>
            <a>customer.surname</a>
            <b>customerSurname</b>
        </field>
        <field>
            <a>recipient.name</a>
            <b>recipientName</b>
        </field>
        <field>
            <a>recipient.surname</a>
            <b>recipientSurname</b>
        </field>
        <field>
            <a>receptionManager.username</a>
            <b>receptionManager</b>
        </field>
        <field>
            <a>processingManager.username</a>
            <b>processingManager</b>
        </field>
        <field>
            <a>deliveryManager.username</a>
            <b>deliveryManager</b>
        </field>
        <field>
            <a>customer.id</a>
            <b>customerId</b>
        </field>
        <field>
            <a>recipient.id</a>
            <b>recipientId</b>
        </field>
        <field>
            <a>receptionManager.id</a>
            <b>receptionManagerId</b>
        </field>
        <field>
            <a>processingManager.id</a>
            <b>processingManagerId</b>
        </field>
        <field>
            <a>deliveryManager.id</a>
            <b>deliveryManagerId</b>
        </field>
        <field>
            <a>changes</a>
            <b>changes</b>
            <b-hint>com.itechart.deliveryservice.controller.data.OrderChangeDTO</b-hint>
        </field>
    </mapping>

    <mapping map-null="false">
        <class-a>com.itechart.deliveryservice.entity.Order</class-a>
        <class-b>com.itechart.deliveryservice.controller.data.ShortOrderDTO</class-b>
        <field>
            <a>customer.name</a>
            <b>customerName</b>
        </field>
        <field>
            <a>customer.surname</a>
            <b>customerSurname</b>
        </field>
        <field>
            <a>recipient.name</a>
            <b>recipientName</b>
        </field>
        <field>
            <a>recipient.surname</a>
            <b>recipientSurname</b>
        </field>
    </mapping>

    <mapping map-null="false">
        <class-a>com.itechart.deliveryservice.entity.Order</class-a>
        <class-b>com.itechart.deliveryservice.controller.data.ReceiveOrderDTO</class-b>
        <field>
            <a>customer.id</a>
            <b>customerId</b>
        </field>
        <field>
            <a>recipient.id</a>
            <b>recipientId</b>
        </field>
        <field>
            <a>processingManager.id</a>
            <b>processingManagerId</b>
        </field>
        <field>
            <a>deliveryManager.id</a>
            <b>deliveryManagerId</b>
        </field>
    </mapping>

    <!-- ORDERCHANGE -->
    <mapping map-null="false">
        <class-a>com.itechart.deliveryservice.entity.OrderChange</class-a>
        <class-b>com.itechart.deliveryservice.controller.data.OrderChangeDTO</class-b>
        <field>
            <a>userChangedStatus.username</a>
            <b>userChangedStatusNickname</b>
        </field>
    </mapping>

    <!-- USER -->
    <mapping map-null="false">
        <class-a>com.itechart.deliveryservice.entity.User</class-a>
        <class-b>com.itechart.deliveryservice.controller.data.UserNameDTO</class-b>
    </mapping>

</mappings>
